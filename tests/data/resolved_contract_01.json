{
  "_comment": "Example of a Resolved Tool Contract.",
  "resolved_tool_contract": {
    "tool_contract_id": "pbreports.tools.mapping_stats_report",
    "task_type": "pbsmrtpipe.constants.local_task",
    "is_distributed": false,
    "input_files": ["/path/to/file.dataset.xml"],
    "output_files": ["/tmp/file.report.json"],
    "options": {},
    "nproc": 3,
    "resources": [
      ["$tmpdir", "/tmp/tmpdir"],
      ["$logfile", "/tmp/task-dir/file.log"]]
  },
  "driver": {
    "_comment": "This is the driver exe. The workflow will call ${exe} config.json",
    "exe": "mapping_stats.py --resolved-tool-contract",
    "env": {}
  }
}
